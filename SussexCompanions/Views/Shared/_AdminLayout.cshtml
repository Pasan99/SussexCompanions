                </a>
            </li>
        </ul>
    </nav>


    <script>
        function showNav() {
            $("#nav-bar").show();
            $("#second-nav").show();
            $("#print-btn").show();
        }

        function hideNav(){
            $("#nav-bar").hide();
            $("#second-nav").hide();
            $("#print-btn").hide();
        }
    </script>
